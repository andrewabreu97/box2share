<div class="container">
  <div class="row">
    <div class="col">
      <h1>Subscription</h1>
      <table>
        <thead>

        </thead>
        <tbody>
          <% @cart.subscriptions.each do |subscription| %>
            <tr id="<%= subscription.id %>"><td><%= subscription.plan.name %></td><td><%= humanized_money_with_symbol(subscription.plan.price) %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <h3>Total <%= humanized_money_with_symbol(@cart.total_cost) %></h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-5 offset-4">
      <div id="card-errors" class="alert-danger alert d-none" role="alert"></div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Datos de pago</h5>
          <hr>
          <%= form_tag(payments_path, id: "payment-form") do %>
          <%= hidden_field_tag(:purchase_amounts_cents, @cart.total_cost.cents) %>
          <%= hidden_field_tag(@cart.item_attribute, @cart.item_ids) %>
          <div class="form-group">
            <%= label_tag(:card_name, "Nombre completo (en la tarjeta)") %>
            <%= text_field_tag(:card_name, nil, placeholder: "", class: "form-control") %>
          </div>
          <div class="form-group">
            <%= content_tag(:div, nil , class: "form-control", id: "card-element") %>
          </div>
          <div class="form-group">
            <%= submit_tag("Adquirir suscripciÃ³n", class: "btn btn-block btn-primary", id: "payment-submit", data: { disable_with: false }) %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


