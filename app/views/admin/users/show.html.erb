<% provide(:title, "Usuario") %>

<div id="wrapper">

  <%= render 'shared/sidebar' %>

  <div id="content-wrapper">

    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white breadcrumb-right-arrow">
              <li class="breadcrumb-item"><%= link_to "Usuarios", admin_users_path %></li>
              <li class="breadcrumb-item active" aria-current="page"><%= @user.full_name %></li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-lg-6 col-xl-7 mx-auto">
          <div class="card">
            <div class="card-header">Detalles del usuario</div>
            <div class="card-body">
<!--               <h5 class="card-title">Detalles del usuario</h5>
              <hr> -->
              <div class="row">
                <div class="col">
                  <h6>Avatar</h6>
                  <div>
                    <%= image_tag(@user.avatar.url, size: '150x150', class: "img-thumbnail" ) %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Nombre</h6>
                  <div>
                    <%= @user.name %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Nombre</h6>
                  <div>
                    <%= @user.last_name %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Email</h6>
                  <div>
                    <%= @user.email %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Fecha de registro</h6>
                  <div>
                    <%= l @user.created_at.to_datetime, format: :short %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Fecha de actualización</h6>
                  <div>
                    <%= l @user.updated_at.to_datetime, format: :short %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%= link_to :back, class: "btn btn-light mt-2" do %>
            <i class="fas fa-arrow-left"></i> Atrás
          <% end %>
        </div>
      </div>

    </div>

    <%= render 'shared/panel_footer' %>

  </div>

</div>
