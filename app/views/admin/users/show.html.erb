<% provide(:title, "Usuario") %>

<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to dashboard_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Panel de control</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to files_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span>Mis archivos</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to share_files_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-share-alt"></i>
        <span>Compartiendo conmigo</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span>Mi plan</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to payments_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-file-invoice"></i>
        <span>Historial de pagos</span>
      <% end %>
    </li>
    <% if current_user.admin? %>
      <li class="nav-item">
        <%= link_to "#", class: "nav-link" do %>
          <i class="fas fa-fw fa-chart-bar"></i>
          <span>Estadísticas del servicio</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_users_path, class: "nav-link active" do %>
          <i class="fas fa-fw fa-users"></i>
          <span>Usuarios</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_payments_path, class: "nav-link" do %>
          <i class="fas fa-fw fa-file-invoice"></i>
          <span>Historial de pagos del servicio</span>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div id="content-wrapper">

    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white breadcrumb-right-arrow">
              <li class="breadcrumb-item"><%= link_to "Usuarios", admin_users_path %></li>
              <li class="breadcrumb-item active" aria-current="page"><%= @user.full_name %></li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-lg-6 col-xl-7 mx-auto">
          <div class="card">
            <div class="card-header">Detalles del usuario</div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h6>Avatar</h6>
                  <div>
                    <%= image_tag(@user.avatar.url, size: '150x150', class: "img-thumbnail" ) %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Nombre</h6>
                  <div>
                    <%= @user.name %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Apellidos</h6>
                  <div>
                    <%= @user.last_name %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Email</h6>
                  <div>
                    <%= @user.email %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Fecha de registro</h6>
                  <div>
                    <%= l @user.created_at.to_datetime, format: :short %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Fecha de actualización</h6>
                  <div>
                    <%= l @user.updated_at.to_datetime, format: :short %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%= link_to :back, class: "btn btn-light mt-2" do %>
            <i class="fas fa-arrow-left"></i> Atrás
          <% end %>
        </div>
      </div>
      <br>
    </div>

    <%= render 'shared/panel_footer' %>

  </div>

</div>
