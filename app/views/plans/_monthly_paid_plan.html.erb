<div class="card mb-4 box-shadow">
  <div class="card-header">
    <h4 class="my-0 font-weight-normal"><%= monthly_paid_plan.name %></h4>
  </div>
  <div class="card-body">
    <%= image_tag(monthly_paid_plan.name.downcase, alt: "#{monthly_paid_plan.name}_icon") %>
    <h1 class="card-title pricing-card-title">
      <%= humanized_money(monthly_paid_plan.price) %> &euro;<small class="text-muted">/ <%= t('pages.pricing.month') %></small>
    </h1>
    <ul class="list-unstyled mt-3 mb-4">
      <li><%= monthly_paid_plan.space_allowed %> GB <%= t('pages.pricing.of_storage') %></li>
      <li>...</li>
      <li>...</li>
      <li>...</li>
    </ul>
    <% if user_signed_in? %>
      <%= form_tag(subscription_cart_path, method: :patch) do %>
        <%= hidden_field_tag("plan_id", monthly_paid_plan.id) %>
        <%= submit_tag("Add to Cart", class: "btn btn-lg btn-block btn-outline-primary", id: "add-to-cart") %>
      <% end %>
    <% else %>
      <%= link_to t('pages.pricing.buttons.subscribe'), new_user_session_path, class: "btn btn-lg btn-block btn-outline-primary" %>
    <% end %>
  </div>
</div>
