<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span><%= t('.sidebar.dashboard') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_files_path, class: "nav-link active" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span><%= t('.sidebar.files') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span><%= t('.sidebar.plan') %></span>
      <% end %>
    </li>
  </ul>

  <div id="content-wrapper">

    <div class="container-fluid">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white breadcrumb-right-arrow">
          <li class="breadcrumb-item active" aria-current="page">Mis archivos</li>
        </ol>
      </nav>

      <div class="row">
        <div class="col">
          <div class="table-responsive">
            <table class="table table-border-top-less">
              <thead>
                <tr>
                  <th scope="col"></th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Fecha de subida</th>
                  <th scope="col">Tama√±o</th>
                </tr>
              </thead>
              <tbody>
                <% @assets.each do |asset| %>
                <tr>
                  <th scope="row">1</th>
                  <td><%= asset.uploaded_file.filename %></td>
                  <td><%= l asset.uploaded_file.created_at.to_date, format: :default %></td>
                  <td><%= number_to_human_size(asset.uploaded_file.byte_size) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/panel_footer' %>

  </div>

</div>
