<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span><%= t('panel.pages.sidebar.dashboard') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">
        <i class="fas fa-fw fa-folder-open"></i>
        <span><%= t('panel.pages.sidebar.files') %></span>
      </a>
    </li>
    <li class="nav-item">
      <%= link_to panel_plan_path, class: "nav-link active" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span><%= t('panel.pages.sidebar.plan') %></span>
      <% end %>
    </li>
  </ul>

  <div id="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 ml-auto mr-auto">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= t('panel.pages.plan.account_type') %></h5>
              <hr>
              <div class="row">
                <div class="col">
                  <h6>Plan</h6>
                  <div>
                    <span><%= @subscription.plan.name %></span>
                    <% unless @subscription.free? %>
                      <span><%= link_to t('panel.pages.plan.buttons.cancel_subscription'), subscription_path(@subscription), class: "btn btn-danger float-right" , method: :delete, data: {confirm: t('panel.pages.plan.messages.confirm_cancel')} %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6><%= t('panel.pages.plan.status') %></h6>
                  <p><span class="badge badge-success"><%= @subscription.status.capitalize %></span></p>
                  <% unless @subscription.free? %>
                    <p><%= t('panel.pages.plan.end_date_subscription') %> <%= l @subscription.end_date, format: :default %></p>
                  <% end %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6><%= t('panel.pages.plan.storage_space') %></h6>
                  <p class="text-right font-weight-light"><span class="font-weight-bold">0 Bytes</span> <%= t('panel.pages.plan.of') %> <%= @subscription.plan.space_allowed.gigabyte %> Bytes <%= t('panel.pages.plan.in_use') %></p>
                  <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50%</div>
                  </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col">
                  <h6><%= t('panel.pages.plan.renewal') %></h6>
                  <% if @subscription.free? %>
                    <p><%= t('panel.pages.plan.no_billing_cycle') %></p>
                  <% else %>
                    <% if @subscription.plan.month? %>
                      <p><%= t('panel.pages.plan.billing_cycle.monthly') %></p>
                    <% else %>
                      <p><%= t('panel.pages.plan.billing_cycle.yearly') %></p>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <hr>
            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-6 ml-auto mr-auto">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Facturación</h5>
              <hr>
              <div class="row">
                <div class="col">
                  <% if current_user.payment_method? %>
                    <p>La tarjeta <%= current_user.card_brand %> termina en <%= current_user.card_last4 %></p>
                    <p><%= link_to "Actualizar", edit_payment_method_path %></p>
                  <% else %>
                    <p>No tienes ningún método de pago asociado.</p>
                    <p><%= link_to "Añadir", new_payment_method_path %></p></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/panel_footer' %>

  </div>

</div>
