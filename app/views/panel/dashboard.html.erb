<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link active" do %>
        <i class="fas fa-tachometer-alt"></i>
        <span><%= t('.sidebar.dashboard') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_files_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span><%= t('.sidebar.files') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span><%= t('.sidebar.plan') %></span>
      <% end %>
    </li>
  </ul>

  <div id="content-wrapper">

    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-3 col-lg-6 col-xs-12">
          <div class="card h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col">
                    <i class="fas fa-file-upload fa-3x"></i>
                </div>
                <div class="col">
                  <span>Archivos subidos</span>
                  <h3 class="mb-0 font-weight-bold text-gray">0</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-xs-12">
          <div class="card h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col">
                    <i class="fas fa-file-download fa-3x"></i>
                </div>
                <div class="col">
                  <span>Archivos descargados</span>
                  <h3 class="mb-0 font-weight-bold text-gray">0</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/panel_footer' %>

  </div>

</div>



