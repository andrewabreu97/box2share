<header>
	<nav class="navbar navbar-expand navbar-dark bg-custom static-top">
		<%= link_to image_tag("logo", alt: "logo", height: '42'), "#", class: "navbar-brand mr-1" %>
		<ul class="navbar-nav navbar-right ml-auto">
			<% if user_signed_in? %>
			<li class="nav-item dropdown no-arrow">
				<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-user-circle fa-fw fa-2x text-white"></i>
				</a>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
					<%= link_to t('pages.header.navigation_links.profile'), edit_user_registration_path, class: "dropdown-item" %>
					<div class="dropdown-divider"></div>
					<%= link_to t('pages.header.navigation_links.signout'), destroy_user_session_path , class: "dropdown-item", method: :delete %>
				</div>
			</li>
			<% else %>
			<li class="nav-item">
				<%= link_to t('pages.header.navigation_links.signin'), new_user_session_path, class: "nav-link" %>
			</li>
			<li class="nav-item">
				<%= link_to t('pages.header.navigation_links.signup'), new_user_registration_path, class: "btn btn-outline-light" %>
			</li>
			<% end %>
		</ul>
	</nav>
</header>
