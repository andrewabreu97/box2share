<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag "#{STRIPE_JS_HOST}/v3" %>

  <% if Rails.env.production? %>
  <%= tag :meta, name: "stripe-publishable-key", content: ENV['STRIPE_PRODUCTION_PUBLISHABLE_KEY'] %>
  <% else %>
  <%= tag :meta, name: "stripe-publishable-key", content: Rails.application.secrets.stripe_publishable_key %>
  <% end %>

  <%= tag :meta, name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" %>
  <%= render 'layouts/shim' %>
</head>
