<% provide(:title, "Inicio") %>

<section class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto"></div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto"></div>
    </div>
  </div>
</section>

<section class="features-icons bg-light text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fas fa-cloud-upload-alt m-auto text-primary"></i>
          </div>
          <h3><%= t('pages.home.features.upload') %></h3>
          <p class="lead mb-0"><%= t('.features.upload_lead') %></p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fas fa-cloud-download-alt m-auto text-primary"></i>
          </div>
          <h3><%= t('pages.home.features.download') %></h3>
          <p class="lead mb-0"><%= t('.features.download_lead') %></p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fas fa-share-alt m-auto text-primary"></i>
          </div>
          <h3><%= t('pages.home.features.share') %></h3>
          <p class="lead mb-0"><%= t('.features.share_lead') %></p>
        </div>
      </div>
    </div>
  </div>
</section>

