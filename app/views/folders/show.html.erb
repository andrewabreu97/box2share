<% provide(:title, "Detalles de la carpeta") %>

<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to dashboard_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Panel de control</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to files_path, class: "nav-link active" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span>Mis archivos</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to share_files_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-share-alt"></i>
        <span>Compartiendo conmigo</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span>Mi plan</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to payments_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-file-invoice"></i>
        <span>Historial de pagos</span>
      <% end %>
    </li>
    <% if current_user.admin? %>
      <li class="nav-item">
        <%= link_to "#", class: "nav-link" do %>
          <i class="fas fa-fw fa-chart-bar"></i>
          <span>Estad√≠sticas del servicio</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_users_path, class: "nav-link" do %>
          <i class="fas fa-fw fa-users"></i>
          <span>Usuarios</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_payments_path, class: "nav-link" do %>
          <i class="fas fa-fw fa-file-invoice"></i>
          <span>Historial de pagos del servicio</span>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div id="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white breadcrumb-right-arrow">
              <li class="breadcrumb-item"><%= link_to "Mis archivos", files_path %></li>
              <% if @folder.parent %>
                <li class="breadcrumb-item"><%= link_to @folder.parent.name, browse_path(@folder.parent) %></li>
              <% end %>
              <li class="breadcrumb-item active" aria-current="page">Detalles de carpeta</li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 col-lg-8 col-xl-9 mx-auto">
          <div class="card">
            <div class="card-header"><%= @folder.name %></div>
            <div class="card-body">
              <div class="row">
                <div class="col align-self-center text-center">
                    <div>
                      <span>No hay vista previa para esta carpeta.</span>
                    </div>
                </div>
                <div class="col">
                  <%= render 'folder_details', folder: @folder %>
                </div>
              </div>
            </div>
          </div>
          <%= render 'back_link' %>
        </div>
      </div>
      <br>
    </div>
    <br>
    <%= render 'shared/panel_footer' %>

  </div>

</div>
