<div id="wrapper">

  <%= render 'shared/sidebar' %>

  <div id="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 ml-auto mr-auto">
          <div class="card">
            <div class="card-body">
              <%= form_for @folder do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="form-group">
                  <%= f.label :name, "Nombre de la carpeta" %>
                  <%= f.text_field :name, class: "form-control" %>
                </div>
                <%= f.hidden_field :parent_id %>
                <div class="form-group">
                  <%= f.submit "Renombrar carpeta", class: "btn btn-block btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
          <% if @folder.parent %>
            <%= link_to browse_path(@folder.parent), class: "btn btn-light mt-2" do %>
              <i class="fas fa-arrow-left"></i> Atrás
            <% end %>
          <% else %>
            <%= link_to panel_files_path, class: "btn btn-light mt-2" do %>
              <i class="fas fa-arrow-left"></i> Atrás
            <% end %>
          <% end %>
        </div>
      </div>
      <br>
    </div>
    <br>
    <%= render 'shared/panel_footer' %>

  </div>

</div>
