<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span><%= t('.sidebar.dashboard') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_files_path, class: "nav-link active" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span><%= t('.sidebar.files') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span><%= t('.sidebar.plan') %></span>
      <% end %>
    </li>
  </ul>

  <div id="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 ml-auto mr-auto">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col align-self-center text-center">
                  <% if  @asset.uploaded_file.variable? %>
                    <%= image_tag @asset.uploaded_file.variant(resize: "250x250"), class: "img-thumbnail" %>
                  <% elsif @asset.uploaded_file.previewable? %>
                    <%= image_tag @asset.uploaded_file.preview(resize: "250x250"), class: "img-thumbnail" %>
                  <% else %>
                    <div>
                      <span>No hay vista previa para este archivo.</span>
                    </div>
                  <% end %>
                </div>
                <div class="col">
                  <div class="card">
                    <div class="card-header">
                      Detalles del archivo
                    </div>
                    <div class="card-body">
                      <ul class="list-unstyled"
                        <li class="mt-2 mb-2">
                          <span class="h6">Due침o:</span>
                          <span class="float-right"><%= @asset.user.full_name %></span>
                        </li>
                        <li class="mt-2 mb-2">
                          <span class="h6">Fecha de subida:</span>
                          <span class="float-right"><%= @asset.created_at.to_date %></span>
                        </li>
                        <li class="mt-2 mb-2">
                          <span class="h6">Ultima modificaci칩n:</span>
                          <span class="float-right"><%= @asset.updated_at.to_date %></span>
                        </li>
                        <li class="mt-2 mb-2">
                          <span class="h6">Tama침o:</span>
                          <span class="float-right"><%= number_to_human_size(@asset.uploaded_file.byte_size) %></span>
                        </li>
                        <li class="mt-2 mb-2">
                          <span class="h6">Tipo:</span>
                          <span class="float-right"><%= @asset.uploaded_file.content_type %></span>
                        </li>
                        <li class="mt-2 mb-2">
                          <span class="h6">Extensi칩n:</span>
                          <span class="float-right"><%= @asset.uploaded_file.filename.extension %></span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%= render 'back_link' %>
        </div>
      </div>
      <br>
    </div>
    <br>
    <%= render 'shared/panel_footer' %>

  </div>

</div>

