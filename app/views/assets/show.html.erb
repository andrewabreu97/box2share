<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span><%= t('.sidebar.dashboard') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_files_path, class: "nav-link active" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span><%= t('.sidebar.files') %></span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to panel_plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span><%= t('.sidebar.plan') %></span>
      <% end %>
    </li>
  </ul>

  <div id="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 ml-auto mr-auto">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <%= image_tag @asset.uploaded_file.preview(resize_to_limit: [100, 100]) %>
                </div>
              </div>
              <ul class="list-unstyled">
                <li>Subido por: <%= @asset.user.full_name %></li>
                <li>Fecha de subida: <%= @asset.uploaded_file.created_at.to_date %></li>
                <li>Ultima modificación: <%= @asset.uploaded_file.created_at.to_date %></li>
                <li>Tamaño: <%= number_to_human_size(@asset.uploaded_file.byte_size) %></li>
              </ul>
            </div>
          </div>
          <%= link_to panel_files_path, class: "btn btn-light mt-2" do %>
            <i class="fas fa-arrow-left"></i> Atrás
          <% end %>
        </div>
      </div>
      <br>
    </div>
    <br>
    <%= render 'shared/panel_footer' %>

  </div>

</div>

