<% provide(:title, "Historial de pagos") %>

<div id="wrapper">

  <ul class="sidebar navbar-nav">
    <li class="nav-item">
      <%= link_to dashboard_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Panel de control</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to files_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-folder-open"></i>
        <span>Mis archivos</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to share_files_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-share-alt"></i>
        <span>Compartiendo conmigo</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to plan_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-calendar"></i>
        <span>Mi plan</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to payments_path, class: "nav-link active" do %>
        <i class="fas fa-fw fa-file-invoice"></i>
        <span>Historial de pagos</span>
      <% end %>
    </li>
    <% if current_user.admin? %>
      <li class="nav-item">
        <%= link_to "#", class: "nav-link" do %>
          <i class="fas fa-fw fa-chart-bar"></i>
          <span>Estadísticas del servicio</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_users_path, class: "nav-link" do %>
          <i class="fas fa-fw fa-users"></i>
          <span>Usuarios</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_payments_path, class: "nav-link" do %>
          <i class="fas fa-fw fa-file-invoice"></i>
          <span>Historial de pagos del servicio</span>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div id="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white breadcrumb-right-arrow">
              <li class="breadcrumb-item active" aria-current="page">Historial de pagos</li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table id="payments" class="table">
                  <thead>
                    <tr>
                      <th scope="col">Referencia</th>
                      <th scope="col">Plan</th>
                      <th scope="col">Fecha/Hora</th>
                      <th scope="col">Cantidad</th>
                      <th scope="col">Método de pago</th>
                      <th scope="col">Estado</th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @payments.each do |payment| %>
                      <tr>
                        <th scope="row" class="align-middle"><%= payment.reference %></th>
                        <td class="align-middle"><%= payment.payment_line_items.first.buyable.name %></td>
                        <td class="align-middle"><%= l payment.created_at.to_datetime, format: :short %></td>
                        <td class="align-middle"><%= humanized_money(payment.price) %> &euro;</td>
                        <td class="align-middle"><%= payment.payment_method.capitalize %></td>
                        <td class="align-middle"><%= t(".status.#{payment.status}") %></td>
                        <td class="align-middle text-center">
                          <%= link_to receipt_url(payment), target: :_blank, class: "btn btn-info" do %>
                            <i class="fas fa-receipt"></i> Factura
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <br>
        </div>
      </div>
    </div>

    <%= render 'shared/panel_footer' %>

  </div>

</div>
