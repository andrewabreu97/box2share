<% provide(:title, "Cambiar método de pago") %>

<div class="container p-5">
  <div class="row">
    <div class="col-6 ml-auto mr-auto">
      <div id="card-errors" class="alert-danger alert d-none" role="alert"></div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Formulario para actualizar la tarjeta</h5>
          <hr>
          <%= form_tag(payment_method_path, id: "update-card-form", method: :patch) do %>
          <div class="form-group">
            <%= content_tag(:div, nil , class: "form-control", id: "card-element-two") %>
          </div>
          <div class="form-group">
            <%= submit_tag("Actualizar método de pago", class: "btn btn-block btn-primary", id: "update-card-submit", data: { disable_with: false }) %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
